<% @page_title = "マイページ" %>
<h1><%= @page_title %></h1>

<div class="toolbar"><%= link_to "会員の新規登録", :new_member %></div>
<% if @members.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>名前</th>
        <th>住所</th>
        <th>ユーザID</th>
        <th>パスワード</th>
        <th>地域</th>
        <th>定期便</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= link_to member.name, member %></td>
          <td><%= member.adress %></td>
          <td><%= member.user_id %></td>
          <td><%= member.password %></td>
          <td><%= member.group %></td>
          <td><%= member.regular_member? ? "○" : "－" %></td>
          <td>
            <%= link_to "編集", [:edit, member] %> |
            <%= link_to "削除", member, method: :delete,
              data: { confirm: "本当に削除しますか?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>会員情報がありません。</p>
<% end %>