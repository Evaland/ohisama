<%= render "shared/errors", obj: @member %>
<table class="attr">
    <tr>
        <th><%= form.label :"ユーザー名" %></th>
        <td><%= form.text_field :name, size: 16 %></td>
    </tr>
    <tr>
        <th><%= form.label :"住所" %></th>
        <td><%= form.text_field :adress, size: 30 %></td>
    </tr>
    <tr>
        <th><%= form.label :"ユーザーID" %></th>
        <td><%= form.text_field :user_id, size: 24 %></td>
    </tr>
    <tr>
        <th><%= form.label :"ユーザーPW"%></th>
        <td><%= form.text_field :password, size: 24 %></td>
    </tr>
    <tr>
        <th><%= form.label :"ユーザーPW(確認)"%></th>
        <td><%= form.text_field :password_confirmation, size: 24 %></td>
    </tr>
    <tr>
    <th><%= Member.human_attribute_name(:group) %></th>
    <td>
      <%= form.radio_button :group, 1 ,checked: true%>
      <%= form.label :"グループA" %>
      <%= form.radio_button :group, 2 %>
      <%= form.label :"グループB" %>
      <%= form.radio_button :group, 3 %>
      <%= form.label :"グループC" %>
    </td>
    </tr>
    <tr>
      <th><%= form.label :定期便会員 %></th>
      <td>
        <%= form.check_box :regular_member ,checked: false%>
      </td>
    </tr>
    
</table>