<% @page_title = "商品一覧" %>
<h1><%= @page_title %></h1>

<%= form_tag :search_items, method: :get, class: "search" do %>
  <%= text_field_tag "q", params[:q] %>
  <%= submit_tag "検索" %>
<% end %>

<%= menu_link_to "カテゴリー検索", :categories %>

<% if @items.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>商品名</th>
        <th>値段</th>
        <th>商品数</th>
        <th>在庫</th>
        <th>ジャンル</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.item_name %></td>
          <td><%= item.price %></td>
          <td><%= item.item_quantity %></td>
          <td><%= item.disable? ? "○" : "－" %></td>
          <td><%= item.author_category&.category_name %></td>
          <td><%= button_to 'カートに入れる', item, method: :get %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>商品情報がありません。</p>
<% end %>