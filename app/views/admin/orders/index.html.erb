<% @page_title = "配達ステータス管理" %>
<h1><%= @page_title %></h1>

<% if @orders.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>ユーザ</th>
        <th>配達ステータス(1:注文済, 2:発送準備中, 3:発送中, 4:発送済)</th>
        <th>更新日時</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= Member.find_by(id: order.member_id).name %></td>
          <td><%= order.status %></td>
          <td><%= order.updated_at %></td>
          <td><%= link_to "編集", [:edit, :admin, order] %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p>カートの中に商品がありません。</p>
<% end %>