<% @page_title = "定期便管理ページ" %>
<h1><%= @page_title %></h1>

<% if @members.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>名前</th>
        <th>定期便購入</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= link_to member.name, [:admin,member] %></td>
          <td><%= member.regular_member? ? "○" : "－" %></td>
          <td>
            <%= link_to "編集", [:edit, :admin, member] %> |
            <%= link_to "削除", [:admin, member], method: :delete,
              data: { confirm: "本当に削除しますか?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>会員情報がありません。</p>
<% end %>