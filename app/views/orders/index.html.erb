<% @page_title = "ショッピングカート(注文済み/未発送)" %>
<h1><%= @page_title %></h1>

<% if @orderitem.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>商品名</th>
        <th>値段</th>
        <th>個数</th>
        <th>計</th>
        <th>計算用</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @orderitem.each do |orderitem| %>
        <tr>
          <td><%= Item.find_by(id: orderitem.item_id).item_name %></td>
          <td><%= Item.find_by(id: orderitem.item_id).price %><%= "円" %></td>
          <td><%= orderitem.orderitem_quantity %><%= "個" %></td>
          <td><%=  Item.find_by(id: orderitem.item_id).price * orderitem.orderitem_quantity %><%= "円" %></td>
          <td><%=  @total += (Item.find_by(id: orderitem.item_id).price * orderitem.orderitem_quantity) %><%= "円" %></td>
          <td>
            <%= button_to "カートから削除", order_path(orderitem),:orderitem_id=> orderitem.id, method: :delete,
              data: { confirm: "本当に削除しますか?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2><%= "合計金額：#{@total}円" %></h2>

<% else %>
  <p>カートの中に商品がありません。</p>
<% end %>


<% if @regular.present? %>
  <h2><%= "定期便" %></h2>
  <table class="list">
    <thead>
        <tr>
            <th>商品名</th>
            <th>値段</th>
        </tr>
    </thead>
    <tbody>
    <% @regular.each do |regular| %>
        <tr>
            <td><%= Item.find_by(id: regular.item_id).item_name %></td>
            <td><%= regular.regular_quantity %></td>
        </tr>
    <% end %>
    </tbody>
   </table>
<% end %>
